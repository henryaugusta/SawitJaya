<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_success_req_sell"
    android:visibility="gone"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:padding="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_internet_error"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.356"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="success1.json"
                app:lottie_repeatMode="reverse" />

            <TextView
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNeoBlue"
                android:text="Permintaan Jemput Tandan Buah Segar ( Sawit ) Berhasil"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/animation_internet_error" />

            <Button
                android:id="@+id/btnInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorNeoBlue"
                android:fontFamily="@font/nunito_light"
                android:text="Lihat Status dan Invoice"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="20dp" />

            <Button
                android:visibility="gone"
                android:id="@+id/btnMainMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorNeoBlue"
                android:fontFamily="@font/nunito_light"
                android:text="Menu Utama"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>